<div class="container-fluid article-container">
  {{#each articles}}
    <div data-_id={{this._id}} class="card">
      <div class="card-header">
        <h3>
          <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.url}}">{{this.headline}}</a>
          <a class="btn btn-light delete">Remove</a>
        
          <a class="btn btn-success notes">Article Comments</a>
        </h3>
      </div>
      <div class="card-body">{{this.summary}}</div>
    </div>
  {{/each}}
  {{#unless articles.length}}
    <div class="alert alert-secondary text-center">
      <h4>Nothing to see here, come by later.</h4>
    </div>
    <div class="card">
      <div class="card-header text-center">
